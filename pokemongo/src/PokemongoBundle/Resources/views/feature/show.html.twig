{% extends 'base.html.twig' %}

{% block body %}
    {% if features is empty %}
        <p> Aucun Pokemons Pour le moment
    {% else %}
        {% for feature in features %}
            <h1>feature</h1>

            <table>
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ feature.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ feature.name }}</td>
                </tr>
                <tr>
                    <th>Picture</th>
                    <td>{{ feature.picture }}</td>
                </tr>
                <tr>
                    <th>Datetaken</th>
                    <td>{{ feature.dateTaken }}</td>
                </tr>
                <tr>
                    <th>Pointlife</th>
                    <td>{{ feature.pointLife }}</td>
                </tr>
                <tr>
                    <th>Pointcombat</th>
                    <td>{{ feature.pointCombat }}</td>
                </tr>
                <tr>
                    <th>Xp</th>
                    <td>{{ feature.xp }}</td>
                </tr>
                </tbody>
            </table>

            <ul>
                <li>
                    <a href="{{ path('feature_index') }}">Back to the list</a>
                </li>
                <li>
                    <a href="{{ path('feature_edit', { 'id': feature.id }) }}">Edit</a>
                </li>
                <li>
                    {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                    {{ form_end(delete_form) }}
                </li>
            </ul>
        {% endfor %}
    {% endif %}
{% endblock %}
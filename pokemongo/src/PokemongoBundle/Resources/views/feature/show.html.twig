{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">
    <link href="{{ asset('bundles/pokemongo/css/style.css') }}" type="text/css" rel="stylesheet" />
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
{% endblock %}


{% block body %}

    <div class="nav_header" xmlns="http://www.w3.org/1999/html">
        <nav>
            <ul>
                <li><a href="{{ path("homepage") }}" title="Télécharger">Accueil</a></li>
                <li><a href="{{ path("feature_index") }}" title="Télécharger">Pokemon</a></li>
                <li><a href="{{ path("feature_new") }}" title="Télécharger">New pokemon</a></li>
                <li><a href="{{ path("feature_show") }}" title="Télécharger">Show</a></li>
            </ul>
        </nav>
    </div>

    <h1>feature</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ feature.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ feature.name }}</td>
        </tr>
        <tr>
            <th>Picture</th>
            <td>
                <img style="width:150px; height:150px" class="picture" src="{{ asset('uploads/feature/' ~ feature.picture) }}" />
            </td>
        </tr>
        <tr>
            <th>Datetaken</th>
            <td>{{ feature.dateTaken }}</td>
        </tr>
        <tr>
            <th>Pointlife</th>
            <td>{{ feature.pointLife }}</td>
        </tr>
        <tr>
            <th>Pointcombat</th>
            <td>{{ feature.pointCombat }}</td>
        </tr>
        <tr>
            <th>Xp</th>
            <td>{{ feature.xp }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('feature_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('feature_edit', { 'id': feature.id }) }}">Edit</a>
        </li>
    </ul>

    <div>
        {% for comment in allComment %}
            <div>
                <p>{{ comment.title }}</p>
                <p>{{ comment.comment }}</p>
            </div>
        {% endfor %}
    </div>

    <form action="{{ path('post_com', { 'id': feature.id }) }}" method="post">
        <div id="commentaire">
            <div>
                <label for="titre" class="required">Titre</label>
                <input type="text" id="titre" name="titre" required="required"/>
            </div>
            <div>
                <label for="contenu" class="required">Message</label>
                <input type="text" id="contenu" name="contenu" required="required" maxlength="255" />
            </div><input type="hidden" id="commentaire__token" name="commentaire[_token]" value="_NAWtXEjPXD-1lPODdw2IeEaOC72-aI4XuduAcCVT4A" />
        </div>
        <input type="submit" value="Create" />
    </form>
{% endblock %}